<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginModule.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@drawable/box_10dp">

            <ImageView
                android:id="@+id/ivBackarrow"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:padding="7dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_backarrow"
                app:tint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/textColor"
                android:fontFamily="@font/font_semi_bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/box_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_box"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_first_name" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/name"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorLight"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_box"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_phone" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <EditText
                    android:id="@+id/edtNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/mobile"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorLight"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_box"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_email" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/email"
                    android:includeFontPadding="false"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorLight"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_box"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_password" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/password"
                    android:includeFontPadding="false"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorLight"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_eye"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:layout_marginVertical="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lMale"
                    android:layout_height="45dp"
                    android:layout_width="32dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMale"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/male0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvMale"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="gravity"
                    android:layout_marginLeft="15dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font_semi_bold"
                    android:gravity="left|center"
                    android:text="@string/male"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/lFemale"
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/ivFemale"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/female" />

                </LinearLayout>

                    <TextView
                        android:id="@+id/tvFemale"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:textAlignment="gravity"
                        android:layout_marginLeft="15dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/font_semi_bold"
                        android:gravity="left|center"
                        android:text="@string/female"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSignup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="7dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/box_50dp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/signup"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="7dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_medium"
                    android:gravity="center"
                    android:text="Sign Up With"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/gray"/>

                <!--                      star and end mate linearlayout -->

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/box_50dp"
                    android:orientation="horizontal"
                    android:id="@+id/lFacebook">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_fb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_semi_bold"
                        android:gravity="center"
                        android:text="@string/facebook"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lGoogle"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/box_50dp"
                    android:backgroundTint="#DC322E"
                    android:orientation="horizontal"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_google02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_semi_bold"
                        android:gravity="center"
                        android:text="@string/google"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginVertical="7dp"
            android:paddingHorizontal="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semi_bold"
                android:includeFontPadding="false"
                android:text="By Creating Account, I agree to"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTearms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:text="Tearms and Condition"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semi_bold"
                    android:includeFontPadding="false"
                    android:text="and"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:text="Privacy Policy"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>