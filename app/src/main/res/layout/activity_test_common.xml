<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardModule.activity.TestCommonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:id="@+id/lToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <include
                layout="@layout/toolbar"
                android:id="@+id/toolbar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:background="@drawable/stroke_solid"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_bold"
                        android:padding="7dp"
                        android:text="URIN ROUTINE EXAMINATION"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_semi_bold"
                            android:text=" $1"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/colorAccent"
                            android:gravity="center">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_cart"
                                app:tint="@color/white" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:paddingLeft="7dp"
                        android:text="Card risk card risk "
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="7dp"
                        android:paddingRight="7dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/font_bold"
                            android:text="4 Hrs"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lPreinformation"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_solid"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_pretestinfo"
                    app:tint="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingVertical="8dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/preinformation"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_medium"
                        android:text="-"                                android:includeFontPadding="false"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lTestparameters"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/stroke_solid"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_testparams"
                    app:tint="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingVertical="8dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/testparams"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSearchBook1"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_medium"
                        android:text="6 Test Parameters included"
                        android:includeFontPadding="false"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/box_10dp"
                android:padding="7dp"
                android:layout_marginVertical="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid-19 RT-PCR"
                    android:textSize="16sp"
                    android:padding="7dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/font_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="right"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="190dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_downarrow"
                    app:tint="@color/black" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>