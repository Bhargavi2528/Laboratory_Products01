<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardModule.frgement.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivProfileImg"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_default_profile_pic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:fontFamily="@font/font_bold"
                        android:gravity="center"
                        android:text="Robert Downey"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lMyorder"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_my_order"
                            app:tint="@color/colorPrimaryDark" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/myorder"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lMyfamily"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_my_family" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/myfamily"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lMyaddress"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_my_address" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/myaddress"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lNotification"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_notification" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/notification"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lChangecity"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic__locationlab" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/changecity"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lContactus"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_contact_us" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/contactus"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lRefundpolicy"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_refund_policy" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/refundpolicy"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLogout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/box_10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="15dp"
                            android:adjustViewBounds="true"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_logout" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#b5bfbf" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:text="@string/logout"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_right_24" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>