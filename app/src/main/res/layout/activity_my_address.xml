<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardModule.activity.MyAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:id="@+id/lToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <include
                layout="@layout/toolbar"
                android:id="@+id/toolbar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/lAddaddress"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginVertical="7dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/box_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAddaddress"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_add_new_addresh"
                    app:tint="@color/colorSecondaryVariant"/>

                <View
                    android:layout_width="1dp"
                    android:layout_marginVertical="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingVertical="5dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvAddaddress"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/addaddress"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddaddress1"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font_regular"
                        android:text="Add new address that you use frequently"
                        android:includeFontPadding="false"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="250dp"
                android:fontFamily="@font/font_bold"
                android:text="No Address Found!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</layout>